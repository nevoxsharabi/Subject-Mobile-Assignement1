        <ImageView
            android:id="@+id/imageViewHeart2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="2"
            app:srcCompat="@drawable/heart" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>